<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/colorText"/>
            <stroke android:color="@color/colorText" android:width="4dp"/>
            <!--corners allow us to make the rounded corners button-->
            <corners android:topLeftRadius="12dp" android:bottomRightRadius="5dp" />
            <padding android:right="5dp" android:left="5dp" android:bottom="2dp" android:top="2dp"/>
        </shape>
    </item>
</selector>