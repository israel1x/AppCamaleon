<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ListaClientes">

    <include android:id="@+id/miActionBar" layout="@layout/actionbar">
    </include>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <SearchView
            android:id="@+id/sv_listaClientes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:queryHint="Buscar"
            android:focusable="false"
            android:focusableInTouchMode="true"
            android:iconifiedByDefault="false"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

                <iammert.com.expandablelib.ExpandableLayout
                    android:id="@+id/el_listaClientes"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:parentLayout="@layout/layout_parent_lc"
                    app:childLayout="@layout/layout_child_lc"/>

        </ScrollView>
    </LinearLayout>

</LinearLayout>