<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rLayout"
    tools:context=".ListaPedidos">
    <include
        android:id="@+id/miActionBar"
        layout="@layout/actionbar"></include>
    <LinearLayout
        android:layout_below="@+id/miActionBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/rowTableHeader"
        android:weightSum="5">

        <TextView
            android:id="@+id/cellNombre"
            android:background="@drawable/row_cell_border"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="5dp"
            android:paddingLeft="5dp"
            android:paddingBottom="5dp"
            android:text="NOMBRE" />

        <TextView
            android:id="@+id/cellPresentacion"
            android:background="@drawable/row_cell_border"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="5dp"
            android:paddingLeft="5dp"
            android:paddingBottom="5dp"
            android:text="PRESENTACION" />

        <TextView
            android:id="@+id/cellPrecio"
            android:background="@drawable/row_cell_border"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="5dp"
            android:paddingLeft="5dp"
            android:paddingBottom="5dp"
            android:text="PRECIO" />

        <TextView
            android:id="@+id/cellCantidad"
            android:background="@drawable/row_cell_border"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="5dp"
            android:paddingLeft="5dp"
            android:paddingBottom="5dp"
            android:text="CANTIDAD" />

        <TextView
            android:id="@+id/cellSubtotal"
            android:background="@drawable/row_cell_border"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="5dp"
            android:paddingLeft="5dp"
            android:paddingBottom="5dp"
            android:text="SUBTOTAL" />

    </LinearLayout>


    <!-- Place your layout here -->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/tableLayoutProducto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_total"
        android:layout_below="@+id/rowTableHeader">

    </android.support.v7.widget.RecyclerView>

</RelativeLayout>