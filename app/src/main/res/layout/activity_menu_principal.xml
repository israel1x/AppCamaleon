<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MenuPrincipal">


   <LinearLayout
       android:layout_marginTop="30dp"
       android:layout_marginBottom="20dp"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_weight=".33"
           android:layout_marginRight="12dp"
           android:layout_marginLeft="12dp"
           android:orientation="horizontal">

           <Button
               android:id="@+id/bt_ing_pedidos"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_weight=".5"
               android:textAllCaps="false"
               android:background="?selectableItemBackground"
               android:drawableTop="@drawable/btn_ingresar_pedido"
               android:text="@string/bt_lb_ingresar_pedido"
               android:textColor="#757575"/>

           <Button
               android:id="@+id/bt_ver_pedidos"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_weight=".5"
               android:textAllCaps="false"
               android:drawableTop="@drawable/btn_ver_pedidos"
               android:text="\nVer\nPedidos"
               android:textColor="#757575"
               android:background="?selectableItemBackground"/>
       </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_weight=".33"
           android:layout_marginRight="12dp"
           android:layout_marginLeft="12dp"
           android:orientation="horizontal">

           <Button
               android:id="@+id/bt_ruta_clientes"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_weight=".5"
               android:textAllCaps="false"
               android:drawableTop="@drawable/btn_ruta_clientes"
               android:text="\n Ruta de \n Clientes"
               android:textColor="#757575"
               android:background="?selectableItemBackground" />

           <Button
               android:id="@+id/bt_list_clientes"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_weight=".5"
               android:textAllCaps="false"
               android:drawableTop="@drawable/btn_lista_clientes"
               android:text="\n Lista de \n Clientes"
               android:textColor="#757575"
               android:background="?selectableItemBackground"/>

       </LinearLayout>



       <LinearLayout
           android:orientation="vertical"
           android:layout_weight=".33"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginRight="12dp"
               android:layout_marginLeft="12dp"
               android:orientation="horizontal">

               <Button
                   android:id="@+id/bt_reportes"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_weight=".5"
                   android:textAllCaps="false"
                   android:drawableTop="@drawable/btn_reportes"
                   android:text="\nReportes"
                   android:textColor="#757575"
                   android:background="?selectableItemBackground"/>

               <Button
                   android:id="@+id/bt_offline"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_weight=".5"
                   android:textAllCaps="false"
                   android:drawableTop="@drawable/btn_sicronizar"
                   android:text="\nSincronizacion\nOffline"
                   android:textColor="#757575"
                   android:background="?selectableItemBackground"/>

           </LinearLayout>

          <LinearLayout
              android:layout_marginLeft="12dp"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

              <ImageView
                  android:id="@+id/imgv_modotrabajo"
                  android:textAlignment="center"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:src="@drawable/ic_modotrabajo" />

              <TextView
                  android:id="@+id/tv_mododetrabajo"
                  android:layout_marginLeft="5dp"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  android:layout_gravity="center_vertical"
                  android:text="Online" />
          </LinearLayout>

       </LinearLayout>
   </LinearLayout>


</LinearLayout>