<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lb_child_ci"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:text="RUC/CI:" />

        <TextView
            android:id="@+id/tv_child_ci"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textColor="#3157B7"
            android:text="0988829914" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lb_child_dir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:text="Dirección:" />

        <TextView
            android:id="@+id/tv_child_dir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textColor="#3157B7"
            android:text="Jose Mascote" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lb_child_telf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:text="Teléfono:" />

        <TextView
            android:id="@+id/tv_child_telf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textColor="#3157B7"
            android:text="0988829914" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="horizontal">


        <Button
            android:id="@+id/bt_child_ver_ubicacion"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_weight=".5"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/btn_small"
            android:drawableLeft="@drawable/ic_location_cliente"
            android:textAllCaps="false"
            android:text="Ver Ubicación"
            android:textColor="#ffffff"/>

        <Button
            android:id="@+id/bt_child_nuevo_pedido"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_weight=".5"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/btn_small"
            android:textAllCaps="false"
            android:drawableLeft="@drawable/ic_add_pedido"
            android:text="Nuevo Pedido"
            android:textColor="#ffffff"/>

    </LinearLayout>

</LinearLayout>